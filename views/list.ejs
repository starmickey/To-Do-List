<%- include("header") -%>

<div class="box heading" id="main-heading">
  <h1> <%= list.name %> </h1>
</div>

<div class="box">
  <% list.items.forEach(item => { %>
  <div class="item">
    <input type="checkbox">
    <p><%=  item  %></p>
  </div>
  <% }) %>

  <form class="item" action="/today" method="post">
    <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
    <button type="submit" name="list">+</button>
  </form>
</div>

<%- include("footer") -%>
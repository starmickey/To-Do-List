<%- include("header") -%>

<div class="box heading" id="main-heading">
  <h1>Welcome</h1>
</div>

<div class="container">
  <div class="row align-items-start">


    <% lists.forEach(list=> { %>

    <div class="col-lg-4 col-md-6 col-sm-12 px-4">
      <a class="list-button" href="/list/<%= list.route %> " role="button">
        <div class="box heading">
          <h2>
            <%= list.name %>
          </h2>
        </div>

        <div class="box">

          <% let index=0 %>
          <% while (index < list.items.length && index < 3) { %>

          <% let item=list.items[index] %>
          <div class="item">
            <p>
              <%= item %>
            </p>
          </div>
          <% index++ %>
          <% } %>
        </div>
      </a>
    </div>

    <% }) %>

  </div>

  <%- include("footer") -%>